<AnchorPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.invoicesys.controllers.FXMLInvoiceCreatorController">
   <children>
      <Pane prefHeight="400.0" prefWidth="150.0" style="-fx-background-color: #216869;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="122.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
            <Label layoutX="14.0" layoutY="46.0" prefHeight="27.0" prefWidth="122.0" text="New Invoice" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Button fx:id="submitInvoiceDataBtn" layoutX="440.0" layoutY="336.0" mnemonicParsing="false" onAction="#handleSubmitInvDataButton" prefHeight="26.0" prefWidth="87.0" style="-fx-background-color: #93B1A7;" text="Submit" textAlignment="CENTER" textFill="#1f2421" />
      <Label layoutX="401.0" layoutY="14.0" prefHeight="27.0" prefWidth="70.0" text="Invoice #" textAlignment="CENTER" textFill="#1f2421">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="401.0" layoutY="41.0" prefHeight="27.0" prefWidth="87.0" text="Invoice date : " textAlignment="CENTER" textFill="#1f2421">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="401.0" layoutY="68.0" prefHeight="27.0" prefWidth="70.0" text="Due date : " textAlignment="CENTER" textFill="#1f2421">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TreeTableView fx:id="productTableView" layoutX="168.0" layoutY="162.0" prefHeight="77.0" prefWidth="415.0">
        <columns>
          <TreeTableColumn prefWidth="146.0" text="Description" />
          <TreeTableColumn prefWidth="49.0" text="Qty" />
            <TreeTableColumn prefWidth="70.0" text="Price" />
            <TreeTableColumn prefWidth="56.0" text="Tax" />
            <TreeTableColumn prefWidth="93.0" text="Total" />
        </columns>
      </TreeTableView>
      <Button fx:id="downloadBtn" layoutX="228.0" layoutY="336.0" mnemonicParsing="false" onAction="#handleDownloadButton" prefHeight="26.0" prefWidth="87.0" style="-fx-background-color: #93B1A7;" text="Download" textAlignment="CENTER" textFill="#1f2421" />
      <DatePicker fx:id="dueDate" layoutX="503.0" layoutY="69.0" prefHeight="25.0" prefWidth="80.0" />
      <DatePicker fx:id="date" layoutX="503.0" layoutY="42.0" prefHeight="25.0" prefWidth="80.0" />
      <ChoiceBox fx:id="customerChoice" layoutX="168.0" layoutY="124.0" onMouseClicked="#handleChooseCustomer" prefWidth="150.0" />
      <ChoiceBox fx:id="userChoice" layoutX="436.0" layoutY="124.0" onMouseClicked="#handleChooseUser" prefWidth="150.0" />
      <TextField fx:id="descrTextField" layoutX="178.0" layoutY="254.0" prefHeight="25.0" prefWidth="122.0" promptText="Description" />
      <TextField fx:id="qtyTextField" layoutX="325.0" layoutY="254.0" prefHeight="25.0" prefWidth="33.0" promptText="Qty" />
      <TextField fx:id="priceTextField" layoutX="379.0" layoutY="254.0" prefHeight="25.0" prefWidth="44.0" promptText="Price" />
      <TextField fx:id="taxTextField" layoutX="445.0" layoutY="254.0" prefHeight="25.0" prefWidth="33.0" promptText="Tax" />
      <Button fx:id="addProductToInvoiceBtn" layoutX="511.0" layoutY="254.0" mnemonicParsing="false" onAction="#handleAddProductToInvoiceBtn" text="Add" />
   </children>
</AnchorPane>
